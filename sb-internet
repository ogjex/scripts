#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ó°–Ÿ Internet module" "\- Click to connect
ó°–ª : wifi disabled
ó±šµ : no wifi connection
ó°–© : wifi connection with quality
ó°…› : no ethernet
ó°±“ : ethernet working
ðŸ”’: vpn is active
" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/wlp*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print "ó°–© ", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/wlp*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/wlp*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ó°–ª " || wifiicon="ó±šµ "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ó°±“ " || ethericon="ó°…› "

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon=" ðŸ”’"

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"
